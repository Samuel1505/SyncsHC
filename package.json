{
  "name": "SyncsHC-tests",
  "version": "1.0.0",
  "description": "Run unit tests on this project.",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "vitest run",
    "test:report": "vitest run -- --coverage --costs",
    "test:watch": "chokidar \"tests/**/*.ts\" \"contracts/**/*.clar\" -c \"npm run test:report\"",
    "chainhooks:setup": "tsx chainhooks/setup.ts",
    "chainhooks:list": "tsx -e \"import { chainhooks } from './chainhooks/index.js'; chainhooks.listChainhooks().then(hooks => console.log(JSON.stringify(hooks, null, 2)));\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hirosystems/chainhooks-client": "^1.0.0",
    "@stacks/clarinet-sdk": "^3.9.0",
    "@stacks/keychain": "^4.3.8",
    "@stacks/network": "^7.3.1",
    "@stacks/transactions": "^7.2.0",
    "@types/node": "^24.4.0",
    "chokidar-cli": "^3.0.0",
    "vitest": "^4.0.18",
    "vitest-environment-clarinet": "^3.0.0"
  },
  "devDependencies": {
    "tsx": "^4.7.0"
  }
}
